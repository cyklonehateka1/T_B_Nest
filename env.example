# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration (REQUIRED - MUST BE CHANGED)
# Use either DATABASE_URL (recommended) or individual DB variables
DATABASE_URL=postgresql://username:password@host:5432/database_name?sslmode=require
DB_USER=your-db-username
DB_PASS=your-secure-db-password
DB_NAME=your-database-name
DB_PORT=5432
DB_HOST=your-db-host.com
DB_SCHEMA=tipster
ADMIN_BASEURL=https://your-admin-domain.com

# JWT Configuration (REQUIRED - MUST BE CHANGED)
# Generate strong secrets: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-jwt-secret-at-least-32-characters-long

# Application Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# Telemetry Configuration
TELEMETRY_ENABLED=true
SERVICE_NAME=tipster-betting-backend
SERVICE_VERSION=1.0.0

# Local telemetry (default)
OTLP_ENDPOINT=http://localhost:4318

# Remote telemetry examples (uncomment and configure as needed):
# OTLP_ENDPOINT=https://otlp.nr-data.net:4317
# OTLP_ENDPOINT=https://http-intake.logs.datadoghq.com
# OTLP_ENDPOINT=https://api.honeycomb.io:443

# Authentication for remote endpoints
# OTLP_API_KEY=your-api-key
# OTLP_BEARER_TOKEN=your-bearer-token
# OTLP_USERNAME=your-username
# OTLP_PASSWORD=your-password

# TLS Configuration
# OTLP_TLS_ENABLED=true

TELEMETRY_EXPORT_INTERVAL=1000

# Email Configuration (REQUIRED - MUST BE CHANGED)
EMAIL_FROM=noreply@yourdomain.com   # Sender email address (CHANGE THIS)
EMAIL_FROM_NAME=Your Company Name      # Sender display name (CHANGE THIS)
FRONTEND_URL=https://your-frontend-domain.com   # Frontend base URL (CHANGE THIS)
SUPPORT_EMAIL=support@yourdomain.com   # Support contact email (CHANGE THIS)
ADMIN_EMAIL=admin@yourdomain.com   # Admin email for notifications (CHANGE THIS)

# Brevo Configuration (SMTP)
BREVO_API_KEY=your-brevo-api-key
BREVO_SMTP_USER=your-brevo-smtp-user
BREVO_SMTP_PASS=your-brevo-smtp-pass
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=465
BREVO_SMTP_SECURE=true
BREVO_SMTP_API_KEY=brevo-smtp-api-key
BREVO_SMTP_BASE_URL=https://api.brevo.com/

# SMTP Configuration (for EMAIL_PROVIDER=nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (for EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS SES Configuration (for EMAIL_PROVIDER=aws-ses)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1 

# OGateway Payment Configuration (REQUIRED)
OGATEWAY_API_KEY=your-ogateway-api-key
OGATEWAY_BASE_URL=https://api.ogateway.io
OGATEWAY_WEBHOOK_SECRET=your-ogateway-webhook-secret
OGATEWAY_DEFAULT_CURRENCY=GHS
OGATEWAY_DEFAULT_NETWORK=MTN

# Palmpay Payment Configuration (REQUIRED)
PALMPAY_BASE_URL=https://api.palmpay.com
PALMPAY_APP_ID=your-palmpay-app-id # Used as Bearer token in Authorization header
PALMPAY_PRIVATE_KEY="""
-----BEGIN PRIVATE KEY-----
paste-your-rsa-private-key-here
-----END PRIVATE KEY-----
""" # RSA private key used to generate RSA-SHA1 base64 signature (MD5 of sorted query string, then RSA-SHA1 signed)
PALMPAY_PUBLIC_KEY="""
-----BEGIN PUBLIC KEY-----
paste-your-rsa-public-key-here
-----END PUBLIC KEY-----
""" # Optional: RSA public key used to verify webhook signatures. If not configured, signature verification will be skipped.

# Application URL for webhook callbacks (REQUIRED)
APP_URL=https://your-api-domain.com

# Webhook Configuration (REQUIRED)
WEBHOOK_SECRET=your-webhook-secret-key-for-admin-app-communication

# Match Sync Configuration (ALL DISABLED BY DEFAULT)
# Match sync scheduler - controls all scheduled syncs
MATCH_SYNC_ENABLED=false

# 24-hour sync: Frequent updates for upcoming matches (next 1 day)
# Runs every 2 hours (7200000ms) by default, initial delay 180000ms (3 minutes)
MATCH_SYNC_24H_ENABLED=false
MATCH_SYNC_24H_INTERVAL_MS=7200000

# Weekly sync: Regular sync for upcoming matches (next 7 days)
# Runs every 6 hours (21600000ms) by default, initial delay 60000ms (1 minute)
MATCH_SYNC_WEEKLY_ENABLED=false
MATCH_SYNC_WEEKLY_INTERVAL_MS=21600000

# Monthly sync: Extended sync for future matches (next 30 days)
# Runs every 12 hours (43200000ms) by default, initial delay 240000ms (4 minutes)
MATCH_SYNC_MONTHLY_ENABLED=false
MATCH_SYNC_MONTHLY_INTERVAL_MS=43200000

# The Odds API Configuration (REQUIRED for match sync)
THE_ODDS_API_KEY=your-the-odds-api-key

# ==============================================
# SECURITY NOTES FOR PRODUCTION
# ==============================================
# 1. All secrets must be at least 32 characters long
# 2. Never use default values in production
# 3. Use strong, unique passwords for all services
# 4. Enable SSL/TLS for all database connections
# 5. Regularly rotate secrets and API keys
# 6. Monitor for security vulnerabilities
# 7. Test thoroughly in staging before production deployment 